{
    "compilerOptions": {
      "jsx": "react-jsx",
      "module": "CommonJS",
      "target": "ES2015",
      "rootDir": "src",
      "outDir": "build",
      "esModuleInterop": true,
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "strictNullChecks": true,
      "noImplicitAny": true,
      "noImplicitReturns": true
    },
    "exclude": [
      "node_modules",
      "build",
      "**/*.test.ts",
      "**/*.test.tsx"
    ]
  }
  